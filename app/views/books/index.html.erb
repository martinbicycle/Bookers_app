<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book, "data-confirm" => "Are you sure?" %></td>
  </tr>
     <% end %>
  </tbody>

</table>


<h3>New book</h3>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <br><%= f.label :Title %></br>
  <%= f.text_field :title %>

  <br><%= f.label :Body %><br/>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %><br/>
<% end %>