<h2>Editing book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error! <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <br><%= f.label :Title %></br>
  <%= f.text_field :title %>
  
  <br><%= f.label :Body %><br/>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %><br/>
<% end %>
<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>